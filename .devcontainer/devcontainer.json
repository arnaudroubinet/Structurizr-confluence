{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installGradle": "false",
      "installMaven": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java"
      ],
      "mcp": {
        "servers": {
          "context7": {
            "type": "sse",
            "url": "https://mcp.context7.com/mcp"
          },
          "playwright": {
            "command": "npx",
            "args": [
              "-y",
              "@modelcontextprotocol/server-playwright"
            ],
            "env": {}
          }
        }
      }
    }
  },
  "runArgs": [
    "--cpus=4",
    "--memory=16g",
    "--memory-swap=16g",
    "--shm-size=2g"
  ],
  "postCreateCommand": "bash scripts/init-dev.sh"
}