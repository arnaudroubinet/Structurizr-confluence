{
  "name": "Structurizr Confluence Java 21",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "./scripts/build.sh || true",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java"
      ],
      "mcp": {
        "servers": {
          "context7": {
            "type": "sse",
            "url": "https://mcp.context7.com/mcp"
          },
          "playwright": {
            "command": "npx",
            "args": [
              "-y",
              "@modelcontextprotocol/server-playwright"
            ],
            "env": {}
          },
          "markitdown": {
            "command": "uvx",
            "args": [
              "mcp-markitdown"
            ],
            "env": {}
          }
        }
      }
    }
  }
}